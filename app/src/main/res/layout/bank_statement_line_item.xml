<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/default_16dp"
    android:clickable="false"
    android:paddingRight="@dimen/default_16dp"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        card_view:cardCornerRadius="4dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="@dimen/default_8dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/bankStatementLinePartner"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/body_text_1"
                android:layout_width="wrap_content"
                android:fontFamily="@string/font_normal"
                android:singleLine="true"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:showDividers="middle"
                android:divider="?android:attr/dividerHorizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25">

                    <TextView
                        android:layout_width="match_parent"
                        android:textAllCaps="true"
                        android:textSize="@dimen/text_size_small"
                        android:gravity="center"
                        android:fontFamily="@string/font_condensed"
                        android:textColor="@color/body_text_3"
                        android:layout_height="wrap_content"
                        android:text="@string/label_bank_statement_line_date" />

                    <TextView
                        android:id="@+id/bankStatementLineDate"
                        android:layout_width="match_parent"
                        android:gravity="left"
                        android:layout_marginRight="@dimen/default_8dp"
                        android:textColor="@color/body_text_2"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.45">

                    <TextView
                        android:layout_width="match_parent"
                        android:textAllCaps="true"
                        android:textSize="@dimen/text_size_small"
                        android:gravity="center"
                        android:fontFamily="@string/font_condensed"
                        android:textColor="@color/body_text_3"
                        android:layout_height="wrap_content"
                        android:text="@string/label_bank_statement_line_ref" />

                    <TextView
                        android:id="@+id/bankStatementLineRef"
                        android:layout_width="match_parent"
                        android:gravity="left"
                        android:layout_marginRight="@dimen/default_8dp"
                        android:textColor="@color/body_text_2"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:textAllCaps="true"
                        android:textSize="@dimen/text_size_small"
                        android:gravity="center"
                        android:fontFamily="@string/font_condensed"
                        android:textColor="@color/body_text_3"
                        android:layout_height="wrap_content"
                        android:text="@string/label_bank_statement_line_amount" />

                    <TextView
                        android:id="@+id/bankStatementLineAmount"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/text_size_medium"
                        android:gravity="right"
                        android:layout_marginRight="@dimen/default_8dp"
                        android:textColor="@color/body_text_1"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>