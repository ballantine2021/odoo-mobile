<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <include
        android:id="@+id/dashboard_progress"
        layout="@layout/listview_data_loading_progress" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/dashboard_no_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <include layout="@layout/sale_no_items_view" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <View style="@style/ViewSeparator" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_container_mn"
        android:layout_width="match_parent"
        android:layout_above="@+id/footer"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/items_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:smoothScrollbar="true"
            android:visibility="gone"/>


    </android.support.v4.widget.SwipeRefreshLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:id="@+id/footer"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/footer1"
            android:padding="@dimen/default_8dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#FFFFFF"
                android:text="@string/label_sale_order_count"/>

            <TextView
                android:id="@+id/salesCount"
                android:layout_width="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:paddingLeft="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#FFFFFF"
                android:paddingLeft="8dp"
                android:text="@string/label_total_amount"/>

            <TextView
                android:id="@+id/DayBalance"
                android:layout_width="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:paddingLeft="8dp"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>